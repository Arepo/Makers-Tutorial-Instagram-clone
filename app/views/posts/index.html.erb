<div class="container">
	<% if @posts.any? %>
		<% @posts.in_groups_of(3, false) do |post_triplet| %>
			<div class='row'>
				<%= render post_triplet %>
			</div>
		<% end %>
	<% else %>
		No posts
	<% end %>
	<%= link_to "Create post", new_post_path, class: 'btn btn-primary btn-lg' %>
</div>


